<h3>{{viewTitle}}</h3>

<form action="/personnage" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{personnage._id}}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Nom</label>
            <input type="text" class="form-control" name="lastName" placeholder="Nom" value="{{personnage.lastName}}">
            <div class="text-danger">
            {{personnage.lastNameError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Prénom</label>
            <input type="text" class="form-control" name="firstName" placeholder="Prenom" value="{{personnage.firstName}}">
            <div class="text-danger">
            {{personnage.firstNameError}}</div>
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{personnage.email}}">
        <div class="text-danger">
            {{personnage.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Téléphone" value="{{personnage.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="Ville" value="{{personnage.city}}">
        </div>
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Enregister</button>
        <a class="btn btn-secondary" href="/personnage/list"><i class="fa fa-list-alt"></i> Voir la liste</a>
    </div>
</form>